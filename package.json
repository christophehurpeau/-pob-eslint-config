{
  "name": "@pob/eslint-config-monorepo",
  "private": true,
  "version": "29.2.0",
  "description": "pob eslint configs",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/eslint-config-pob.git",
  "homepage": "https://github.com/christophehurpeau/eslint-config-pob",
  "type": "commonjs",
  "engines": {
    "node": ">=12.10.0"
  },
  "workspaces": [
    "@pob/*"
  ],
  "scripts": {
    "checks": "node scripts/check-packages.js",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:eslint": "eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet .",
    "lint:prettier": "prettier --check .",
    "postinstall": "pob-root-postinstall"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "devDependencies": {
    "@pob/commitlint-config": "3.2.0",
    "@pob/lerna-light": "4.2.0",
    "@pob/root": "5.7.2",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "check-package-dependencies": "2.0.2",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-react": "7.27.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-unicorn": "38.0.1",
    "prettier": "2.4.1",
    "semver": "7.3.5"
  }
}
